<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expand"
    android:padding="5dp">

    <ScrollView
        android:id="@+id/expand_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/top_prd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/expand_img"
                android:layout_width="400dp"
                android:layout_height="400dp"
                app:layout_constraintTop_toBottomOf="@+id/top_prd_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:contextClickable="false" />

            <TextView
                android:id="@+id/expand_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/expand_img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_item_view"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:focusable="false"/>


            <TextView
                android:id="@+id/p_price_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/expand_name_edit"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/list_item_view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/p_desc_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/p_price_expand"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:background="@drawable/list_item_view"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingBottom="40dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/contact_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/p_desc_expand"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:text="Contact Details"/>

            <EditText
                android:id="@+id/expand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/contact_details"
                app:layout_constraintTop_toBottomOf="@+id/contact_details"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/list_item_view"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/expand_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/expand_name"
                app:layout_constraintTop_toBottomOf="@+id/expand_name"
                android:background="@drawable/list_item_view"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/expand_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/list_item_view"
                app:layout_constraintLeft_toLeftOf="@+id/expand_email"
                app:layout_constraintTop_toBottomOf="@+id/expand_email"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>